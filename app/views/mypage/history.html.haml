%row.mypage_history_heading
  로또권 내역

%row.history_list
  - @list.each do |l|
    .mypage_history_item
      .ctime
        = l[:ctime]
      - if l[:type] != 0
        %div{class: "type"}
          = image_tag 'types/type1.png'
      %div{class: "name name_type_#{l[:type]}"}
        = l[:name]
      .comment
        적립
      .coupon
        = image_tag "ic_b.png"
        .coupon_count
          3장

%row.mypage_history_btn
  %button.load_more
    더 보기

:javascript
  $(function(){
    load_history();
  });
